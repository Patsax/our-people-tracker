<section>
    <h4>Create New Role</h4>

    <form class="add-role-form row">
        <div class="col">
            <label for="role">Role title:</label>
            <input type="text" id="role-title" name="role-title">
        </div>
        <div class="col">
            <label for="deptartment">Role department:</label>
            <input type="text" id="role-dept" name="role-dept">
        </div>
        <div class="col">
            <label for="salary">Starting salary:</label>
            <input type="number" id="salary" name="salary">
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>
</section>

{{#if roles.length}}
<section>
    <h2>All Roles</h2>
    <ol>
        {{#each roles as |role|}}
        <li>
            {{ role.title }}
            <a href="/homepage/edit/{{role.id}}" class="edit-link">Edit role</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/public/javascript/roles.js"></script>